{
  "name": "cypress-testing",
  "version": "1.0.0",
  "description": "SauceDemo page testing using Cypress",
  "main": "index.js",
  "scripts": {
    "clean-reports": "rm -rf cypress/reports",
    "test": "npm cypress run",
    "merge-report": "npm mochawesome-merge 'cypress/reports/*.json' > full_report.json",
    "generate-report": "npm marge full_report.json",
    "cypress": "cypress open",
    "cy:run:chrome": "cypress run --headless --browser chrome",
    "cy:run:firefox": "cypress run --headless --browser firefox",
    "lint:fix": "prettier --write \"cypress/**/*.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cypress": "^4.7.0",
    "mochawesome": "^6.1.1",
    "mochawesome-merge": "^4.1.0",
    "mochawesome-report-generator": "^5.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write \"cypress/**/*.js\""
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.19.1"
  }
}
